@inject Microsoft.Extensions.Configuration.IConfiguration Configuration

@{
    Layout = "_Layout";
    ViewData["Title"] = "Login";
    var siteKey = Configuration["ReCaptcha:SiteKey"];
}

<div class="container col-md-5 mt-4">
    <h2 class="fw-bold mb-3">Login</h2>

    @if (TempData["Success"] != null)
    {
        <div class="alert alert-success alert-dismissible fade show">
            <i class="bi bi-check-circle"></i> @TempData["Success"]
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }

    @if (TempData["Error"] != null)
    {
        <div class="alert alert-danger alert-dismissible fade show">
            <i class="bi bi-exclamation-triangle"></i> @TempData["Error"]
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }

    @if (ViewBag.Error != null)
    {
        <div class="alert alert-danger">@ViewBag.Error</div>
    }

    <!-- LOGIN FORM -->
    <form method="post" asp-action="Login" novalidate id="loginForm">
        @Html.AntiForgeryToken()

        <div class="mb-3">
            <label>Email</label>
            <input id="emailInput" name="email" class="form-control" type="email" />
            <small id="emailError" class="text-danger d-none">Please enter your email.</small>
        </div>

        <div class="mb-3">
            <label>Password</label>
            <div class="input-group">
                <input id="passwordInput" name="password" type="password" class="form-control" />
                <button type="button" class="btn btn-outline-secondary" id="togglePassword">
                    <span id="eyeIcon">Show</span>
                </button>
            </div>
            <small id="passwordError" class="text-danger d-none">Please enter your password.</small>
        </div>

        <!-- reCAPTCHA -->
        <div class="mb-3">
            <div class="g-recaptcha" data-sitekey="@siteKey"></div>
            <span id="captchaError" class="text-danger"></span>
        </div>

        <div class="d-flex justify-content-between mt-2">
            <a asp-action="ForgotPassword" class="text-primary">Forgot Password?</a>
        </div>

        <button type="submit" class="btn btn-primary w-100 mt-3" id="loginBtn">Login</button>
    </form>

    <!-- REGISTER LINK -->
    <div class="text-center mt-3">
        <p>Don't have an account? <a asp-action="Register" class="text-primary">Register here</a></p>
    </div>

    <!-- GUEST BUTTON (NOT inside the login form) -->
    <a asp-controller="Account" asp-action="GuestCheckout"
       class="btn btn-dark w-100 mt-2">
        Continue as Guest
    </a>
</div>

@section Scripts {
    <script src="https://www.google.com/recaptcha/api.js" async defer></script>
    <script src="~/js/login.js"></script>
}
