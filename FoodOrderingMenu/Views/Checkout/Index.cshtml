@model FoodOrderingMenu.Models.CheckoutViewModel

@{
    ViewData["Title"] = "Checkout";
}

<div class="container my-5">
    <!-- Display TempData messages at the top -->
    @if (TempData["Success"] != null)
    {
        <div class="alert alert-success alert-dismissible fade show">
            <i class="bi bi-check-circle-fill"></i> @TempData["Success"]
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }

    @if (TempData["Error"] != null)
    {
        <div class="alert alert-danger alert-dismissible fade show">
            <i class="bi bi-exclamation-triangle-fill"></i> @TempData["Error"]
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }

    <div class="row">
        <!-- Left Column - Cart Items and Payment -->
        <div class="col-lg-8">
            <div class="card shadow-sm mb-4">
                <div class="card-header bg-primary text-white">
                    <h4 class="mb-0">
                        <i class="bi bi-cart-check"></i> Order Summary
                    </h4>
                </div>
                <div class="card-body">
                    @if (Model.Items.Any())
                    {
                        <table class="table table-hover">
                            <thead>
                                <tr>
                                    <th>Item</th>
                                    <th>Options</th>
                                    <th>Price</th>
                                    <th>Qty</th>
                                    <th class="text-end">Subtotal</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Model.Items)
                                {
                                    <tr>
                                        <td>
                                            @if (!string.IsNullOrEmpty(item.ImageUrl))
                                            {
                                                <img src="@item.ImageUrl" alt="@item.Name"
                                                     style="width: 50px; height: 50px; object-fit: cover; border-radius: 5px;"
                                                     class="me-2">
                                            }
                                            <strong>@item.Name</strong>
                                        </td>
                                        <td>
                                            @if (!string.IsNullOrEmpty(item.Sweetness) || !string.IsNullOrEmpty(item.IceLevel))
                                            {
                                                <small class="text-muted">
                                                    @if (!string.IsNullOrEmpty(item.Sweetness))
                                                    {
                                                        <span>@item.Sweetness% Sweet</span>
                                                    }
                                                    @if (!string.IsNullOrEmpty(item.IceLevel))
                                                    {
                                                        <span> • @item.IceLevel</span>
                                                    }
                                                </small>
                                            }
                                            else
                                            {
                                                <span class="text-muted">-</span>
                                            }
                                        </td>
                                        <td>RM @item.UnitPrice.ToString("F2")</td>
                                        <td>@item.Qty</td>
                                        <td class="text-end">
                                            <strong>RM @item.LineTotal.ToString("F2")</strong>
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    }
                    else
                    {
                        <div class="alert alert-warning">
                            <i class="bi bi-exclamation-triangle"></i> Your cart is empty!
                        </div>
                    }
                </div>
            </div>

            <!-- Payment Method Section -->
            <div class="card shadow-sm">
                <div class="card-header bg-success text-white">
                    <h4 class="mb-0">
                        <i class="bi bi-credit-card"></i> Payment Method
                    </h4>
                </div>
                <div class="card-body">
                    <form asp-action="Pay" method="post" id="checkoutForm">

                        <!-- Payment Method Selection -->
                        <div class="mb-4">
                            <label class="form-label fw-bold">Select Payment Method:</label>

                            <div class="form-check mb-2">
                                <input class="form-check-input" type="radio" name="PaymentMethod"
                                       id="payAtCounter" value="PayAtCounter"
                                       checked="@(Model.PaymentMethod == "PayAtCounter")">
                                <label class="form-check-label" for="payAtCounter">
                                    <i class="bi bi-cash-stack text-success"></i>
                                    <strong>Pay at Counter</strong> (Cash)
                                </label>
                            </div>

                            <div class="form-check mb-2">
                                <input class="form-check-input" type="radio" name="PaymentMethod"
                                       id="card" value="Card"
                                       checked="@(Model.PaymentMethod == "Card")">
                                <label class="form-check-label" for="card">
                                    <i class="bi bi-credit-card-2-front text-primary"></i>
                                    <strong>Credit/Debit Card</strong>
                                </label>
                            </div>

                            <div class="form-check">
                                <input class="form-check-input" type="radio" name="PaymentMethod"
                                       id="ewallet" value="EWallet"
                                       checked="@(Model.PaymentMethod == "EWallet")">
                                <label class="form-check-label" for="ewallet">
                                    <i class="bi bi-wallet2 text-info"></i>
                                    <strong>E-Wallet</strong>
                                </label>
                            </div>
                        </div>

                        <!-- Card Payment Details -->
                        <div id="cardDetails" class="payment-details" style="display: none;">
                            <hr>
                            <h5 class="mb-3">Card Information</h5>

                            <div class="mb-3">
                                <label for="cardNumber" class="form-label">Card Number</label>
                                <input type="text" class="form-control" id="cardNumber"
                                       name="CardNumber" placeholder="1234 5678 9012 3456"
                                       maxlength="19" value="@Model.CardNumber">
                                <small class="text-muted">Test card: 4532015112830366</small>
                            </div>

                            <div class="mb-3">
                                <label for="cardHolderName" class="form-label">Card Holder Name</label>
                                <input type="text" class="form-control" id="cardHolderName"
                                       name="CardHolderName" placeholder="John Doe"
                                       value="@Model.CardHolderName">
                            </div>

                            <div class="row">
                                <div class="col-md-4 mb-3">
                                    <label for="expiryMonth" class="form-label">Expiry Month</label>
                                    <select class="form-select" id="expiryMonth" name="ExpiryMonth">
                                        <option value="">Month</option>
                                        @for (int i = 1; i <= 12; i++)
                                        {
                                            <option value="@i.ToString("00")" selected="@(Model.ExpiryMonth == i.ToString("00"))">
                                                @i.ToString("00")
                                            </option>
                                        }
                                    </select>
                                </div>

                                <div class="col-md-4 mb-3">
                                    <label for="expiryYear" class="form-label">Expiry Year</label>
                                    <select class="form-select" id="expiryYear" name="ExpiryYear">
                                        <option value="">Year</option>
                                        @for (int i = DateTime.Now.Year; i <= DateTime.Now.Year + 10; i++)
                                        {
                                            <option value="@i" selected="@(Model.ExpiryYear == i.ToString())">@i</option>
                                        }
                                    </select>
                                </div>

                                <div class="col-md-4 mb-3">
                                    <label for="cvv" class="form-label">CVV</label>
                                    <input type="text" class="form-control" id="cvv"
                                           name="CVV" placeholder="123" maxlength="4"
                                           value="@Model.CVV">
                                </div>
                            </div>
                        </div>

                        <!-- E-Wallet Payment Details -->
                        <div id="ewalletDetails" class="payment-details" style="display: none;">
                            <hr>
                            <h5 class="mb-3">Select E-Wallet Provider</h5>

                            <div class="row">
                                <div class="col-6 col-md-3 mb-3">
                                    <div class="form-check">
                                        <input class="form-check-input" type="radio"
                                               name="EWalletProvider" id="tng" value="TNG"
                                               checked="@(Model.EWalletProvider == "TNG")">
                                        <label class="form-check-label" for="tng">
                                            Touch 'n Go
                                        </label>
                                    </div>
                                </div>
                                <div class="col-6 col-md-3 mb-3">
                                    <div class="form-check">
                                        <input class="form-check-input" type="radio"
                                               name="EWalletProvider" id="grabpay" value="GrabPay"
                                               checked="@(Model.EWalletProvider == "GrabPay")">
                                        <label class="form-check-label" for="grabpay">
                                            GrabPay
                                        </label>
                                    </div>
                                </div>
                                <div class="col-6 col-md-3 mb-3">
                                    <div class="form-check">
                                        <input class="form-check-input" type="radio"
                                               name="EWalletProvider" id="boost" value="Boost"
                                               checked="@(Model.EWalletProvider == "Boost")">
                                        <label class="form-check-label" for="boost">
                                            Boost
                                        </label>
                                    </div>
                                </div>
                                <div class="col-6 col-md-3 mb-3">
                                    <div class="form-check">
                                        <input class="form-check-input" type="radio"
                                               name="EWalletProvider" id="shopeepay" value="ShopeePay"
                                               checked="@(Model.EWalletProvider == "ShopeePay")">
                                        <label class="form-check-label" for="shopeepay">
                                            ShopeePay
                                        </label>
                                    </div>
                                </div>
                            </div>

                            <div class="mb-3">
                                <label for="ewalletPhone" class="form-label">Phone Number</label>
                                <input type="tel" class="form-control" id="ewalletPhone"
                                       name="EWalletPhone" placeholder="01X-XXXXXXX"
                                       value="@Model.EWalletPhone">
                            </div>
                        </div>

                        <hr class="my-4">

                        <!-- Submit Button -->
                        <div class="d-grid gap-2">
                            <button type="submit" class="btn btn-primary btn-lg">
                                <i class="bi bi-check-circle"></i> Confirm Order
                            </button>
                            <a asp-controller="Cart" asp-action="Index" class="btn btn-outline-secondary">
                                <i class="bi bi-arrow-left"></i> Back to Cart
                            </a>
                        </div>
                    </form>
                </div>
            </div>
        </div>

        <!-- Right Column - Price Summary and Discount -->
        <div class="col-lg-4">
            <!-- Discount Code Section -->
            <div class="card shadow-sm mb-4">
                <div class="card-header bg-warning text-dark">
                    <h5 class="mb-0">
                        <i class="bi bi-ticket-perforated"></i> Promo Code
                    </h5>
                </div>
                <div class="card-body">
                    @if (Model.IsDiscountApplied)
                    {
                        <!-- Discount Applied Successfully -->
                        <div class="alert alert-success mb-3">
                            <i class="bi bi-check-circle-fill"></i> @Model.DiscountMessage
                        </div>

                        <form asp-action="RemoveDiscount" method="post" class="d-inline">
                            <button type="submit" class="btn btn-sm btn-outline-danger w-100">
                                <i class="bi bi-x-circle"></i> Remove Discount
                            </button>
                        </form>
                    }
                    else
                    {
                        <!-- Promo Code Input Form -->
                        <form asp-action="ApplyDiscount" method="post" id="discountForm">
                            <div class="input-group mb-2">
                                <input type="text" class="form-control @(TempData["Error"] != null && TempData["Error"].ToString().Contains("discount") ? "is-invalid" : "")"
                                       name="discountCode"
                                       id="discountCode"
                                       placeholder="Enter promo code"
                                       value="@Model.DiscountCodeInput"
                                       required>
                                <button class="btn btn-warning" type="submit">
                                    <i class="bi bi-arrow-right"></i> Apply
                                </button>
                            </div>
                        </form>

                        <small class="text-muted d-block mt-2">
                            <i class="bi bi-info-circle"></i> Available codes: WELCOME10, GROUP20, LUNCH15
                        </small>
                    }
                </div>
            </div>

            <!-- Price Summary -->
            <div class="card shadow-sm sticky-top" style="top: 20px;">
                <div class="card-header bg-dark text-white">
                    <h5 class="mb-0">
                        <i class="bi bi-calculator"></i> Order Total
                    </h5>
                </div>
                <div class="card-body">
                    <table class="table table-borderless mb-0">
                        <tbody>
                            <tr>
                                <td>Subtotal:</td>
                                <td class="text-end">RM @Model.Subtotal.ToString("F2")</td>
                            </tr>
                            <tr>
                                <td>Service Tax (10%):</td>
                                <td class="text-end">RM @Model.ServiceTax.ToString("F2")</td>
                            </tr>
                            <tr>
                                <td>SST (6%):</td>
                                <td class="text-end">RM @Model.SST.ToString("F2")</td>
                            </tr>
                            <tr class="border-top">
                                <td><strong>Grand Total:</strong></td>
                                <td class="text-end">
                                    <strong class="fs-5">RM @Model.GrandTotal.ToString("F2")</strong>
                                </td>
                            </tr>

                            @if (Model.IsDiscountApplied && Model.DiscountAmount > 0)
                            {
                                <tr class="text-success">
                                    <td>
                                        <i class="bi bi-tag-fill"></i> <strong>Discount:</strong>
                                    </td>
                                    <td class="text-end">
                                        <strong>- RM @Model.DiscountAmount.ToString("F2")</strong>
                                    </td>
                                </tr>
                                <tr class="border-top border-success">
                                    <td><strong class="text-success">Final Total:</strong></td>
                                    <td class="text-end">
                                        <strong class="fs-4 text-success">
                                            RM @Model.FinalTotal.ToString("F2")
                                        </strong>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>

                    @if (Model.IsDiscountApplied)
                    {
                        <div class="alert alert-success mt-3 mb-0">
                            <small>
                                <i class="bi bi-piggy-bank"></i>
                                You're saving RM @Model.DiscountAmount.ToString("F2")!
                            </small>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        // Show/hide payment method details based on selection
        document.addEventListener('DOMContentLoaded', function() {
            const paymentMethods = document.querySelectorAll('input[name="PaymentMethod"]');
            const cardDetails = document.getElementById('cardDetails');
            const ewalletDetails = document.getElementById('ewalletDetails');

            function updatePaymentDetails() {
                const selectedMethod = document.querySelector('input[name="PaymentMethod"]:checked').value;

                cardDetails.style.display = 'none';
                ewalletDetails.style.display = 'none';

                if (selectedMethod === 'Card') {
                    cardDetails.style.display = 'block';
                } else if (selectedMethod === 'EWallet') {
                    ewalletDetails.style.display = 'block';
                }
            }

            paymentMethods.forEach(function(radio) {
                radio.addEventListener('change', updatePaymentDetails);
            });

            // Initialize on page load
            updatePaymentDetails();

            // Format card number input
            const cardNumberInput = document.getElementById('cardNumber');
            if (cardNumberInput) {
                cardNumberInput.addEventListener('input', function(e) {
                    let value = e.target.value.replace(/\s/g, '');
                    let formattedValue = value.match(/.{1,4}/g)?.join(' ') || value;
                    e.target.value = formattedValue;
                });
            }

            // Auto-dismiss alerts after 5 seconds
            setTimeout(function() {
                const alerts = document.querySelectorAll('.alert-dismissible');
                alerts.forEach(function(alert) {
                    const bsAlert = new bootstrap.Alert(alert);
                    bsAlert.close();
                });
            }, 5000);
        });
    </script>
}
