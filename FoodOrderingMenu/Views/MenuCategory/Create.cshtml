@model FoodOrderingMenu.Models.MenuCategory
@{
    Layout = "_Layout";
    ViewData["Title"] = "Create Category";
}

<div class="container py-4">
    <h2>Create Category</h2>

    <form asp-action="Create" method="post" class="mt-3">
        @Html.AntiForgeryToken()

        <div class="mb-3">
            <label asp-for="Name" class="form-label">Category Name</label>
            <input asp-for="Name" class="form-control" />
            <span asp-validation-for="Name" class="text-danger"></span>
        </div>

        <div class="mb-3">
            <label asp-for="SortOrder" class="form-label">Sort Order</label>
            <input asp-for="SortOrder" type="number" class="form-control" />
            <span asp-validation-for="SortOrder" class="text-danger"></span>
        </div>

        <button class="btn btn-primary" type="submit">Create</button>
        <a asp-action="Index" class="btn btn-secondary ms-2">Cancel</a>
    </form>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
