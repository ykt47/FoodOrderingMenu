@model FoodOrderingMenu.Models.MenuCategory
@{
    Layout = "_Layout";
    ViewData["Title"] = "Edit Category";
}

<div class="container py-4">
    <h2>Edit Category</h2>

    <form asp-action="Edit" method="post" class="mt-3">
        @Html.AntiForgeryToken()
        <input type="hidden" asp-for="Id" />

        <div class="mb-3">
            <label asp-for="Name" class="form-label">Category Name</label>
            <input asp-for="Name" class="form-control" />
            <span asp-validation-for="Name" class="text-danger"></span>
        </div>

        <div class="mb-3">
            <label asp-for="SortOrder" class="form-label">Sort Order</label>
            <input asp-for="SortOrder" type="number" class="form-control" />
            <span asp-validation-for="SortOrder" class="text-danger"></span>
        </div>

        <button class="btn btn-primary" type="submit">Save</button>
        <a asp-action="Index" class="btn btn-secondary ms-2">Cancel</a>
    </form>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
