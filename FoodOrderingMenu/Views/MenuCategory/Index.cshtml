@model IEnumerable<FoodOrderingMenu.Models.MenuCategory>
@{
    Layout = "_Layout";
    ViewData["Title"] = "Manage Categories";
}

<div class="container py-4">

    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2 class="fw-bold">Menu Categories</h2>
        <a class="btn btn-primary" asp-action="Create">+ Create Category</a>
    </div>

    <table class="table table-hover shadow-sm bg-white align-middle rounded">
        <thead class="table-dark">
            <tr>
                <th style="width:120px;">Sort</th>
                <th>Name</th>
                <th class="text-end" style="width:160px;">Actions</th>
            </tr>
        </thead>

        <tbody>
            @foreach (var c in Model)
            {
                <tr>
                    <td>@c.SortOrder</td>

                    <td>
                        <strong>@c.Name</strong>
                    </td>

                    <td class="text-end">

                        <a class="btn btn-sm btn-outline-secondary me-1"
                           asp-action="Edit" asp-route-id="@c.Id">
                            Edit
                        </a>

                        <button type="button"
                                class="btn btn-sm btn-outline-danger"
                                data-bs-toggle="modal"
                                data-bs-target="#deleteModal_@c.Id">
                            Delete
                        </button>

                        <div class="modal fade" id="deleteModal_@c.Id" tabindex="-1">
                            <div class="modal-dialog modal-dialog-centered">
                                <div class="modal-content">

                                    <div class="modal-header bg-danger text-white">
                                        <h5 class="modal-title">Confirm Delete</h5>
                                        <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
                                    </div>

                                    <div class="modal-body">
                                        Delete category <strong>@c.Name</strong>?
                                        <br />
                                        <small class="text-muted">This action cannot be undone.</small>
                                    </div>

                                    <div class="modal-footer">
                                        <form asp-action="Delete" method="post">
                                            <input type="hidden" name="id" value="@c.Id" />

                                            <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">
                                                Cancel
                                            </button>

                                            <button type="submit" class="btn btn-danger">
                                                Delete
                                            </button>
                                        </form>
                                    </div>

                                </div>
                            </div>
                        </div>

                    </td>
                </tr>
            }
        </tbody>
    </table>

    <!-- Pagination -->
    @if (ViewBag.TotalPages > 1)
    {
        <nav>
            <ul class="pagination justify-content-center mt-4">
                @for (int i = 1; i <= ViewBag.TotalPages; i++)
                {
                    <li class="page-item @(i == ViewBag.Page ? "active" : "")">
                        <a class="page-link" asp-action="Index" asp-route-page="@i">@i</a>
                    </li>
                }
            </ul>
        </nav>
    }

</div>
