@model IEnumerable<FoodOrderingMenu.Models.MenuItem>
@{
    Layout = "_Layout";
    ViewData["Title"] = "Manage Menu Items";

    int page = ViewBag.Page ?? 1;
    int totalPages = ViewBag.TotalPages ?? 1;
}

<div class="container py-4">

    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2 class="fw-bold">Menu Items</h2>
        <a class="btn btn-primary" asp-action="Create">
            + Create Item
        </a>
    </div>

    <table class="table table-hover align-middle shadow-sm bg-white rounded">
        <thead class="table-dark">
            <tr>
                <th style="width:110px;">Image</th>
                <th>Name & Description</th>
                <th>Category</th>
                <th style="width:140px;">Price (RM)</th>
                <th style="width:100px;">Available</th>
                <th class="text-end" style="width:160px;">Actions</th>
            </tr>
        </thead>

        <tbody>
            @foreach (var it in Model)
            {
                <tr>
                    <td>
                        @if (!string.IsNullOrEmpty(it.ImageUrl))
                        {
                            <img src="@it.ImageUrl"
                                 class="rounded"
                                 style="width:100px;height:70px;object-fit:cover;" />
                        }
                        else
                        {
                            <span class="text-muted">No Image</span>
                        }
                    </td>

                    <td>
                        <strong>@it.Name</strong><br />
                        <small class="text-muted">@it.Description</small>
                    </td>

                    <td>@(it.Category?.Name ?? "-")</td>

                    <td class="fw-semibold">RM @it.Price.ToString("F2")</td>

                    <td>
                        @if (it.IsAvailable)
                        {
                            <span class="badge bg-success">Available</span>
                        }
                        else
                        {
                            <span class="badge bg-secondary">Hidden</span>
                        }
                    </td>

                    <td class="text-end">

                        <a class="btn btn-sm btn-outline-secondary me-1"
                           asp-action="Edit" asp-route-id="@it.Id">
                            Edit
                        </a>

                        <!-- Delete Button -->
                        <button type="button"
                                class="btn btn-sm btn-outline-danger"
                                data-bs-toggle="modal"
                                data-bs-target="#deleteModal_@it.Id">
                            Delete
                        </button>

                        <!-- Delete Confirmation Modal -->
                        <div class="modal fade" id="deleteModal_@it.Id" tabindex="-1">
                            <div class="modal-dialog modal-dialog-centered">
                                <div class="modal-content">

                                    <div class="modal-header bg-danger text-white">
                                        <h5 class="modal-title">Confirm Delete</h5>
                                        <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
                                    </div>

                                    <div class="modal-body">
                                        Are you sure you want to delete:
                                        <strong>@it.Name</strong>?
                                        <br />
                                        <span class="text-muted">This action cannot be undone.</span>
                                    </div>

                                    <div class="modal-footer">
                                        <form asp-action="Delete" method="post">
                                            <input type="hidden" name="id" value="@it.Id" />

                                            <button type="button"
                                                    class="btn btn-secondary"
                                                    data-bs-dismiss="modal">
                                                Cancel
                                            </button>

                                            <button type="submit" class="btn btn-danger">Delete</button>
                                        </form>
                                    </div>

                                </div>
                            </div>
                        </div>

                    </td>
                </tr>
            }
        </tbody>
    </table>

    <!-- PAGINATION -->
    <nav aria-label="Page navigation" class="mt-4">
        <ul class="pagination justify-content-center">

            <!-- Previous Button -->
            <li class="page-item @(page <= 1 ? "disabled" : "")">
                <a class="page-link"
                   asp-action="Index"
                   asp-route-page="@(page - 1)">Previous</a>
            </li>

            <!-- Page Numbers -->
            @for (int p = 1; p <= totalPages; p++)
            {
                <li class="page-item @(p == page ? "active" : "")">
                    <a class="page-link"
                       asp-action="Index"
                       asp-route-page="@p">@p</a>
                </li>
            }

            <!-- Next Button -->
            <li class="page-item @(page >= totalPages ? "disabled" : "")">
                <a class="page-link"
                   asp-action="Index"
                   asp-route-page="@(page + 1)">Next</a>
            </li>

        </ul>
    </nav>

</div>
