@{
    Layout = "_Layout";
    ViewData["Title"] = "Search Menu";
}

<div class="container py-5">
    <h1 class="text-center mb-4">Search Menu (Live)</h1>

    <div class="row mb-4 justify-content-center">
        <div class="col-md-6">
            <div class="input-group">
                <select id="category" class="form-select" style="max-width:200px;">
                    <option value="">All Categories</option>
                    @foreach (var c in ViewBag.Categories as IList<FoodOrderingMenu.Models.MenuCategory> ?? new List<FoodOrderingMenu.Models.MenuCategory>())
                    {
                        <option value="@c.Id">@c.Name</option>
                    }
                </select>

                <button id="btnFilter" class="btn btn-primary">Filter</button>

                <input id="keyword" type="search" class="form-control" placeholder="Search menu (AJAX)" />
                <input id="minPrice" type="number" step="0.01" class="form-control" placeholder="Min" style="max-width:120px;" />
                <input id="maxPrice" type="number" step="0.01" class="form-control" placeholder="Max" style="max-width:120px;" />
            </div>
        </div>
    </div>

    <div id="results" class="row g-4">
        <!-- AJAX results will be injected here -->
    </div>
</div>

@section Scripts {
    <script src="~/js/menu-search.js"></script>
}
