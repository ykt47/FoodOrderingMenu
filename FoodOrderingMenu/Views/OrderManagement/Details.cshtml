@model FoodOrderingMenu.Models.Order
@{
    ViewData["Title"] = $"Order #{Model.Id} Details";
    Layout = "_Layout";
}

<div class="container py-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2 class="fw-bold">Order #@Model.Id</h2>
        <a asp-action="Index" class="btn btn-secondary">
            <i class="bi bi-arrow-left"></i> Back to Orders
        </a>
    </div>

    @if (TempData["Success"] != null)
    {
        <div class="alert alert-success alert-dismissible fade show">
            @TempData["Success"]
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }

    <div class="row g-4">
        <!-- Order Information -->
        <div class="col-md-4">
            <div class="card shadow-sm h-100">
                <div class="card-header bg-primary text-white">
                    <h5 class="mb-0">Order Information</h5>
                </div>
                <div class="card-body">
                    <div class="mb-3">
                        <label class="text-muted small">Order Date</label>
                        <div class="fw-bold">@Model.CreatedAt.ToLocalTime().ToString("dd MMM yyyy, hh:mm tt")</div>
                    </div>

                    @if (Model.UpdatedAt.HasValue)
                    {
                        <div class="mb-3">
                            <label class="text-muted small">Last Updated</label>
                            <div class="fw-bold">@Model.UpdatedAt.Value.ToLocalTime().ToString("dd MMM yyyy, hh:mm tt")</div>
                        </div>
                    }

                    @if (Model.CompletedAt.HasValue)
                    {
                        <div class="mb-3">
                            <label class="text-muted small">Completed At</label>
                            <div class="fw-bold">@Model.CompletedAt.Value.ToLocalTime().ToString("dd MMM yyyy, hh:mm tt")</div>
                        </div>
                    }

                    <div class="mb-3">
                        <label class="text-muted small">Current Status</label>
                        <div>
                            @switch (Model.Status)
                            {
                                case "Received":
                                    <span class="badge bg-primary">@Model.Status</span>
                                    break;
                                case "Pending":
                                    <span class="badge bg-warning text-dark">@Model.Status</span>
                                    break;
                                case "Preparing":
                                    <span class="badge bg-info">@Model.Status</span>
                                    break;
                                case "Ready":
                                    <span class="badge bg-success">@Model.Status</span>
                                    break;
                                case "Completed":
                                    <span class="badge bg-dark">@Model.Status</span>
                                    break;
                                case "Cancelled":
                                    <span class="badge bg-danger">@Model.Status</span>
                                    break;
                            }
                        </div>
                    </div>

                    @if (!string.IsNullOrWhiteSpace(Model.CancellationReason))
                    {
                        <div class="alert alert-danger mb-0">
                            <strong>Cancellation Reason:</strong><br />
                            @Model.CancellationReason
                        </div>
                    }
                </div>
            </div>
        </div>

        <!-- Customer & Payment -->
        <div class="col-md-4">
            <div class="card shadow-sm h-100">
                <div class="card-header bg-success text-white">
                    <h5 class="mb-0">Customer & Payment</h5>
                </div>
                <div class="card-body">
                    <div class="mb-3">
                        <label class="text-muted small">Customer</label>
                        @if (Model.User != null)
                        {
                            <div class="fw-bold">@Model.User.FullName</div>
                            <small class="text-muted">@Model.User.Email</small>
                        }
                        else
                        {
                            <div class="text-muted">Guest Customer</div>
                        }
                    </div>

                    <div class="mb-3">
                        <label class="text-muted small">Payment Method</label>
                        <div class="fw-bold">@Model.PaymentMethod</div>
                        @if (!string.IsNullOrWhiteSpace(Model.PaymentProvider))
                        {
                            <small class="text-muted">via @Model.PaymentProvider</small>
                        }
                    </div>

                    <hr />

                    <div class="mb-2">
                        <div class="d-flex justify-content-between">
                            <span>Subtotal:</span>
                            <span>RM @Model.Subtotal.ToString("F2")</span>
                        </div>
                    </div>

                    <div class="mb-2">
                        <div class="d-flex justify-content-between">
                            <span>Service Tax (10%):</span>
                            <span>RM @Model.ServiceTax.ToString("F2")</span>
                        </div>
                    </div>

                    <div class="mb-3">
                        <div class="d-flex justify-content-between">
                            <span>SST (6%):</span>
                            <span>RM @Model.SST.ToString("F2")</span>
                        </div>
                    </div>

                    @* Display discount if applied *@
                    @if (Model.DiscountAmount > 0)
                    {
                        <div class="mb-3">
                            <div class="d-flex justify-content-between text-success">
                                <span>
                                    <i class="bi bi-tag-fill"></i> Discount:
                                </span>
                                <span>- RM @Model.DiscountAmount.ToString("F2")</span>
                            </div>
                            @if (Model.DiscountCode != null)
                            {
                                <small class="text-muted d-block mt-1">
                                    Code: <strong>@Model.DiscountCode.Code</strong>
                                </small>
                            }
                        </div>
                    }

                    <hr />

                    <div class="d-flex justify-content-between">
                        <strong>@(Model.DiscountAmount > 0 ? "Final Total:" : "Grand Total:")</strong>
                        <strong class="text-success fs-5">RM @Model.GrandTotal.ToString("F2")</strong>
                    </div>

                    @* Show savings message if discount applied *@
                    @if (Model.DiscountAmount > 0)
                    {
                        <div class="alert alert-success mt-3 mb-0 py-2">
                            <small>
                                <i class="bi bi-piggy-bank"></i>
                                You saved RM @Model.DiscountAmount.ToString("F2")!
                            </small>
                        </div>
                    }
                </div>
            </div>
        </div>

        <!-- Status Update Actions -->
        <div class="col-md-4">
            <div class="card shadow-sm h-100">
                <div class="card-header bg-warning text-dark">
                    <h5 class="mb-0">Actions</h5>
                </div>
                <div class="card-body">
                    @if (Model.Status != "Completed" && Model.Status != "Cancelled")
                    {
                        <div class="mb-3">
                            <label class="form-label fw-bold">Update Status</label>
                            <form asp-action="UpdateStatus" method="post" id="statusForm">
                                @Html.AntiForgeryToken()
                                <input type="hidden" name="id" value="@Model.Id" />

                                <select name="newStatus" class="form-select mb-3" id="statusSelect">
                                    @{
                                        var validStatuses = new List<string>();
                                        switch (Model.Status)
                                        {
                                            case "Received":
                                                validStatuses = new List<string> { "Pending" };
                                                break;
                                            case "Pending":
                                                validStatuses = new List<string> { "Preparing" };
                                                break;
                                            case "Preparing":
                                                validStatuses = new List<string> { "Ready" };
                                                break;
                                            case "Ready":
                                                validStatuses = new List<string> { "Completed" };
                                                break;
                                        }
                                    }

                                    @foreach (var status in validStatuses)
                                    {
                                        <option value="@status">@status</option>
                                    }
                                </select>

                                <button type="submit" class="btn btn-success w-100" @(validStatuses.Any() ? "" : "disabled")>
                                    <i class="bi bi-check-circle"></i> Update Status
                                </button>
                            </form>
                        </div>

                        <hr />

                        <button class="btn btn-danger w-100"
                                data-bs-toggle="modal"
                                data-bs-target="#cancelModal">
                            <i class="bi bi-x-circle"></i> Cancel Order
                        </button>
                    }
                    else
                    {
                        <div class="alert alert-info mb-0">
                            This order is <strong>@Model.Status</strong> and cannot be modified.
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>

    <!-- Order Items -->
    <div class="card shadow-sm mt-4">
        <div class="card-header bg-dark text-white">
            <h5 class="mb-0">Order Items (@Model.Items.Count)</h5>
        </div>
        <div class="card-body p-0">
            <div class="table-responsive">
                <table class="table table-hover align-middle mb-0">
                    <thead class="table-light">
                        <tr>
                            <th style="width: 80px;"></th>
                            <th>Item Name</th>
                            <th style="width: 150px;">Customization</th>
                            <th style="width: 120px;">Unit Price</th>
                            <th style="width: 80px;">Qty</th>
                            <th style="width: 120px;" class="text-end">Subtotal</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model.Items)
                        {
                            <tr>
                                <td>
                                    @if (item.MenuItem?.ImageUrl != null)
                                    {
                                        <img src="@item.MenuItem.ImageUrl"
                                             class="rounded"
                                             style="width: 60px; height: 60px; object-fit: cover;"
                                             alt="@item.Name" />
                                    }
                                    else
                                    {
                                        <div class="bg-light rounded d-flex align-items-center justify-content-center"
                                             style="width: 60px; height: 60px;">
                                            <i class="bi bi-image text-muted"></i>
                                        </div>
                                    }
                                </td>
                                <td>
                                    <div class="fw-bold">@item.Name</div>
                                </td>
                                <td>
                                    @if (!string.IsNullOrWhiteSpace(item.Sweetness) || !string.IsNullOrWhiteSpace(item.IceLevel))
                                    {
                                        <small class="text-muted">
                                            @if (!string.IsNullOrWhiteSpace(item.Sweetness))
                                            {
                                                <div>Sweet: @item.Sweetness</div>
                                            }
                                            @if (!string.IsNullOrWhiteSpace(item.IceLevel))
                                            {
                                                <div>Ice: @item.IceLevel</div>
                                            }
                                        </small>
                                    }
                                    else
                                    {
                                        <span class="text-muted">-</span>
                                    }
                                </td>
                                <td>RM @item.UnitPrice.ToString("F2")</td>
                                <td class="text-center">@item.Qty</td>
                                <td class="text-end fw-bold">RM @item.LineTotal.ToString("F2")</td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>

<!-- Cancel Order Modal -->
<div class="modal fade" id="cancelModal" tabindex="-1">
    <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content">
            <form asp-action="Cancel" method="post">
                @Html.AntiForgeryToken()
                <input type="hidden" name="id" value="@Model.Id" />

                <div class="modal-header bg-danger text-white">
                    <h5 class="modal-title">Cancel Order #@Model.Id</h5>
                    <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal"></button>
                </div>

                <div class="modal-body">
                    <p>Are you sure you want to cancel this order?</p>
                    <div class="mb-3">
                        <label class="form-label fw-bold">Cancellation Reason <span class="text-danger">*</span></label>
                        <textarea name="cancellationReason"
                                  class="form-control"
                                  rows="3"
                                  placeholder="Enter reason for cancellation..."
                                  required></textarea>
                    </div>
                </div>

                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
                    <button type="submit" class="btn btn-danger">Cancel Order</button>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        // Form validation
        document.getElementById('statusForm')?.addEventListener('submit', function(e) {
            if (!confirm('Are you sure you want to update this order status?')) {
                e.preventDefault();
            }
        });
    </script>
}
